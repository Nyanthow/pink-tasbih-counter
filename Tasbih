<body>
  <button class="toggle-darkmode" onclick="toggleDarkMode()">Toggle Dark Mode</button>
  <div class="tasbih-container">
    <h1>ðŸŒ¸ Pink Tasbih Counter</h1>
    <div id="counter">0</div>
    <div class="button-group">
      <button onclick="decreaseCount()">-</button>
      <button onclick="incrementCount()">Tap</button>
      <button onclick="resetCount()">Reset</button>
    </div>
    <div class="preset-group">
      <button onclick="setGoal(33)">Subhanallah (33)</button>
      <button onclick="setGoal(66)">Alhamdulillah (66)</button>
      <button onclick="setGoal(99)">Allahu Akbar (99)</button>
    </div>
    <div class="footer">
      Your count is saved automatically in your browser.
    </div>
  </div>

  <audio id="click-sound" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_eb802fa3a7.mp3" preload="auto"></audio>

  <script>
    let count = localStorage.getItem('tasbihCount') ? parseInt(localStorage.getItem('tasbihCount')) : 0;
    let goal = localStorage.getItem('tasbihGoal') ? parseInt(localStorage.getItem('tasbihGoal')) : 0;

    function updateDisplay() {
      document.getElementById('counter').textContent = count;
    }

    function incrementCount() {
      count++;
      localStorage.setItem('tasbihCount', count);
      updateDisplay();
      playClickSound();
      vibrate();

      if (goal && count === goal) {
        alert("ðŸŽ‰ You reached your goal of " + goal + "!");
      }
    }

    function decreaseCount() {
      if (count > 0) {
        count--;
        localStorage.setItem('tasbihCount', count);
        updateDisplay();
        playClickSound();
        vibrate();
      }
    }

    function resetCount() {
      count = 0;
      localStorage.setItem('tasbihCount', count);
      updateDisplay();
    }

    function setGoal(value) {
      goal = value;
      localStorage.setItem('tasbihGoal', goal);
      alert("Goal set to " + value);
    }

    function playClickSound() {
      const sound = document.getElementById('click-sound');
      sound.currentTime = 0;
      sound.play();
    }

    function vibrate() {
      if ("vibrate" in navigator) {
        navigator.vibrate(100);
      }
    }

    function toggleDarkMode() {
      document.body.classList.toggle("dark");
    }

    // Initialize
    updateDisplay();
  </script>
</body>
